<!DOCTYPE html>
<html>
  <head>
    <title>Nomster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
<!-- Font Families from Google -->
    <link href="https://fonts.googleapis.com/css?family=DM+Sans|Mali&display=swap" rel="stylesheet">
  </head>

  <body>


<!-- Bootstrap - Navbar -->

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <%= link_to 'NOMSTER', root_path, class: 'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

      <li class="nav-item active">
        <%= link_to new_place_path, class: 'nav-link' do %>
          Add Place
          <i class= "fa fa-plus-circle"></i>          
        <% end %>
      </li>
      <li class="nav-item active">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Sign out', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', new_admin_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign up', new_admin_registration_path, class: 'nav-link' %>
          </li>
        <% end %>


    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Feature Coming Soon!">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>


  </div>
</nav>



<!-- User Authentication Alerts - from GEM: Devise -->
  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <%= yield %>

  </body>

</html>
